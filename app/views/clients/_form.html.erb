<%= form_with(model: client) do |form| %>
  <div class="row">
    <div class="col">
      <h5 class="form-heading">Basic Client Details</h5>
      <div class="form-field">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-field">
        <%= form.label :status, class: "form-label" %>
        <%= form.text_field :status, class: "form-control" %>
      </div>
    </div>
    <div class="col">
      <h5 class="form-heading">Contact Information</h5>
      <div class="form-field">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="form-field">
        <%= form.label :phone, class: "form-label" %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>
    </div>
  </div>


  <h5 class="form-heading">Mailing Address</h5>

  <div class="form-field">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-field">
    <%= form.label :city, class: "form-label" %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col">
      <div class="form-field">
        <%= form.label :state, class: "form-label" %>
        <%= form.text_field :state, class: "form-control" %>
      </div>
    </div>
    <div class="col">
      <div class="form-field">
        <%= form.label :zip, class: "form-label" %>
        <%= form.text_field :zip, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-field">
    <%= form.label :country, class: "form-label" %>
    <%= form.text_field :country, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit 'Save Client', :class => 'btn btn-success' %>
    <%= link_to 'Cancel', clients_path, class: "btn btn-light" %>
  </div>
<% end %>